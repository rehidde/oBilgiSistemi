                                                    <button type="submit" class="btn btn-primary btn-sm"
                                                        title="Aktife Al">‚ñ∂Ô∏è</button>
                                                    <% } %>
                                        </form>
                                        <form action="/dashboardAdmin/ogrenci/sil/<%= o.id %>" method="POST"
                                            style="display:inline;" onsubmit="return confirm('Emin misiniz?')">
                                            <button class="btn btn-danger btn-sm">üóëÔ∏è</button>
                                        </form>
                                    </td>
                                </tr>
                                <% }); %>
                        </tbody>
                    </table>
                </div>
    </div>

    <script>
        function toggleAccordion(id, header) {
            const content = document.getElementById(id);
            const icon = header.querySelector('.accordion-icon');
            content.classList.toggle('open');
            icon.classList.toggle('open');
        }
    </script>
</body>

</html>