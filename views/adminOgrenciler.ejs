                            <div class="form-row">
                                <div class="form-group">
                                    <label>Program *</label>
                                    <select name="program" required>
                                        <option value="Bilgisayar M√ºhendisliƒüi">Bilgisayar M√ºhendisliƒüi</option>
                                        <option value="Elektrik-Elektronik M√ºhendisliƒüi">Elektrik-Elektronik
                                            M√ºhendisliƒüi</option>
                                    </select>
                                </div>
                                <div class="form-group">
                                    <label>Sƒ±nƒ±f *</label>
                                    <select name="sinif" required>
                                        <option value="1">1. Sƒ±nƒ±f</option>
                                        <option value="2">2. Sƒ±nƒ±f</option>
                                        <option value="3">3. Sƒ±nƒ±f</option>
                                        <option value="4">4. Sƒ±nƒ±f</option>
