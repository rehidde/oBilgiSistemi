                        <form action="/dashboardAdmin/ogrenci/ekle" method="POST">
                            <h4 style="color:#666; margin-top:0;">Temel Bilgiler</h4>
                            <div class="form-row">
                                <div class="form-group"><label>√ñƒürenci No *</label><input type="text" name="numara"
                                        required placeholder="2024103001"></div>
                                <div class="form-group"><label>TC Kimlik No</label><input type="text" name="tc"
                                        maxlength="11"></div>
                                <div class="form-group"><label>Ad *</label><input type="text" name="ad" required></div>
                                <div class="form-group"><label>Soyad *</label><input type="text" name="soyad" required>
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="form-group"><label>≈ûifre</label><input type="text" name="sifre"
                                        value="123456"></div>
